<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Steps">
    

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:elevation="@dimen/elevation_bar"
        android:background="@color/colorBackground"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/step_nxt"
            android:layout_width="@dimen/naviArrowWidth"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:background="@color/colorBackground"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/step_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textSize="@dimen/naviTextSize"
            android:textColor="@color/colorText"
            tools:text="2"/>

        <ImageButton
            android:id="@+id/step_back"
            android:layout_width="@dimen/naviArrowWidth"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:background="@color/colorBackground"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>
    
    <FrameLayout
        android:id="@+id/steps_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/navbar"
        android:layout_alignParentTop="true" />

</RelativeLayout>
